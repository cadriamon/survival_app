WindowManager:
    Title:
    Load_Game:
    Manual: 
    Setting:
    Start_Game:
    Gameplay:


<Title>:
    name: "title"

    GridLayout:
        cols: 3
        rows: 2
        GridLayout:
            cols: 1
            Label: 
                text: "Survival Game"
            Button:
                id: start
                text: "Start"
                on_release: 
                    app.root.current = "start_game"
                    root.manager.transition.direction = "left"
            Button:
                id: load_game
                text: "Load Game"
                on_release: 
                    app.root.current = "load_game"
                    root.manager.transition.direction = "left"
            Button: 
                id: manual
                text: "Manual"
                on_release:
                    app.root.current = "manual"
                    root.manager.transition.direction = "left"
            Button:
                id: setting
                text: "Settings"
                on_release:
                    app.root.current = "setting"
                    root.manager.transition.direction = "left"


<Start_Game>
    name: "start_game"
    player_name: player_name
    GridLayout:
        cols: 1
        Label:
            text: "Name"
        TextInput:
            id: player_name
            multiline: False
        Button:
            text: "Easy"
            on_release:
                root.easy_difficulty()
                app.root.current = "gameplay"
                root.manager.transition.direction = "left"
        Button:
            text: "Medium"
        Button:
            text: "Hard"
        Button:
            text: "Back"
            on_release: 
                app.root.current = "title"
                root.manager.transition.direction = "right"

<Load_Game>
    name: "load_game"
    GridLayout: 
        cols: 1
        Button:
            text: "Game 1"
        Button: 
            text: "Game 2"
        Button:
            text: "Game 3"
        Button:
            text: "Back"
            on_release:
                app.root.current = "title"
                root.manager.transition.direction = "right"


<Manual>
    name: "manual"
    GridLayout: 
        cols: 1 
        Label: 
            text: "Game manual text"
        Button: 
            text: "Back" 
            on_release: 
                app.root.current = "title"
                root.manager.transition.direction = "right"


<Setting>
    name: "setting"
    GridLayout:
        cols: 1
        Button: 
            text: "Volume"
        Button:
            text: "Text Speed"
        Button:
            text: "Back"
            on_release:
                app.root.current = "title"
                root.manager.transition.direction = "right"


<Gameplay>:
    name: "gameplay"
    on_enter:
        root.update()
    GridLayout:
        cols:1
        Label:
            text: "Image Placement"
        GridLayout:
            cols:2
            Button: 
                text: "area1"
                on_release: 
                    root.area_1()
            Button: 
                text: "area2"
                on_release:
                    root.area_2()
        Button:
            text: "Back"
            on_release: 
                app.root.current = "title"